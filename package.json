{
  "name": "budget-manager",
  "version": "1.0.0",
  "main": "src/index.js",
  "repository": "https://github.com/lgcolella/BudgetManager.git",
  "author": "lgcolella",
  "license": "MIT",
  "dependencies": {
    "electron": "^1.8.4",
    "prop-types": "^15.6.1",
    "react": "^16.3.0",
    "react-color": "^2.14.1",
    "react-dom": "^16.3.0",
    "recharts": "^1.0.0-beta.10",
    "xlsx": "^0.12.12"
  },
  "scripts": {
    "dev": "node ./node_modules/concurrently/src/main.js \"npm run dev:main\" \"npm run dev:app\"",
    "dev:full": "node ./node_modules/concurrently/src/main.js \"npm run dev\" \"npm run sass:watch\"",
    "dev:rebuild": "npm run build && npm run dev",
    "dev:main": "node ./node_modules/electron/cli.js ./src",
    "dev:app": "node ./node_modules/webpack-dev-server/bin/webpack-dev-server.js --config webpack.config.app.js --mode=development",
    "build": "npm run clean:build && npm run build:main && npm run build:app",
    "build:main": "node ./node_modules/webpack/bin/webpack.js --config webpack.config.main.js --mode=production",
    "build:app": "npm run sass:compile && node ./node_modules/concurrently/src/main.js \"npm run build:app:webpack\" \"npm run build:app:gulp\"",
    "build:app:webpack": "node ./node_modules/webpack/bin/webpack.js --config webpack.config.app.js --mode=production",
    "build:app:gulp": "node ./node_modules/gulp/bin/gulp.js assets",
    "start": "node ./node_modules/electron/cli.js ./build",
    "dist:current": "npm run build && npm run clean:dist && node ./node_modules/electron-packager/cli.js ./build budget-manager --out=dist",
    "dist:all": "node ./node_modules/electron-packager/cli.js ./build budget-manager --platform=all --out=dist --overwrite",
    "lint": "node ./node_modules/eslint/bin/eslint.js src/*/*.js",
    "lint:airbnb": "node ./node_modules/eslint/bin/eslint.js -c .eslintrc.airbnb src/*/*.js",
    "sass:compile": "node ./node_modules/gulp/bin/gulp.js sass",
    "sass:watch": "node ./node_modules/gulp/bin/gulp.js sass-watch",
    "clean:build": "node ./node_modules/gulp/bin/gulp.js clean:build",
    "clean:dist": "node ./node_modules/gulp/bin/gulp.js clean:dist",
    "dist:test": "npx electron-builder --prepackaged=build"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "concurrently": "^3.5.1",
    "css-loader": "^0.28.11",
    "electron-packager": "^12.0.0",
    "electron-rebuild": "^1.7.3",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.10.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.7.0",
    "file-loader": "^1.1.11",
    "gulp": "^3.9.1",
    "gulp-clean": "^0.4.0",
    "gulp-clean-css": "^3.9.3",
    "gulp-htmlmin": "^4.0.0",
    "gulp-sass": "^3.2.1",
    "style-loader": "^0.20.3",
    "url-loader": "^1.0.1",
    "webpack": "^4.4.1",
    "webpack-cli": "^2.0.13",
    "webpack-dev-server": "^3.1.1"
  }
}
